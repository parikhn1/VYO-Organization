@model VYO.Models.BhajanDocumentModels
@{
    ViewBag.Title = "CoverPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>File Manager</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
            </li>
            <li>
                App Views
            </li>
            <li class="active">
                <strong>File Manager</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
    
        <form action="/Booklet/CustomIndex" method="post">
            <div class="col-lg-9 animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                       @if (@Model.VYOCoverPagesExplorList != null)
                       {
                        foreach (var Page in @Model.VYOCoverPagesExplorList)
                        {
                            <div class="file-box">
                                <div class="file">
                                    <span class="corner"></span>

                                    <div class="image">
                                        <img alt="image" class="img-responsive" onc src="~/Assets/Images/@Page.CoverPageName"/>
                                    </div>
                                    <div class="file-name">
                                       @Page.CoverPageName
                                        <br />
                                       
                                    </div>
                                    <div class="checkbox checkbox-primary col-md-offset-6">
                                        <input type="checkbox" id="F_BalKrishna.jpeg" name="SelectedCoverPage"
                                               value="@Page.CoverPageName" />
                                    </div>
                                </div>
                            </div>
                        }
                       }
                       
                    </div>
                </div>
                <div>
                    <input type="submit" name="Continue" value="Continue" />
                    @*<button class="btn btn-primary btn-lg right "  onclick="@("window.location.href='" + @Url.Action("FinalBooklet", "Booklet"))"> Print </button>
                    <ul class="pagination pull-right"></ul>*@
                </div>
            </div>
            </form>
</div>
</div>


